<%= form_with model: [@category, @task] do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div>
        <%= form.label :details %>
        <%= form.text_area :details %>
    </div>
    <div>
        <%= form.label :completed %>
        <%= form.check_box :completed %>
    </div>
    <div>
        <%= form.label :date %>
        <%= form.date_field :date %>
    </div>
    
    <%= form.submit %>
<% end %>