<div class="flex items-baseline justify-between border-b pb-2.5">
    <div class="flex items-baseline">
        <h2 class="text-3xl"><%= @task.title %></h2>
        <% if @task.date %>
            <p class="ml-3">Due: <%= @task.date.strftime('%B %d, %Y') %></p>
        <% end %>
        <% if @task.completed %>
            <p class="ml-3">Completed</p>
        <% else %>
            <p class="ml-3">Not Completed</p>
        <% end %>
    </div>
    <div>
        <%= link_to 'Back to Category Page', category_path(@category), class: "rounded-lg py-3 px-5 bg-gray-100 inline font-medium" %>
        <%= link_to 'Edit', edit_category_task_path(@task.category, @task), class: "rounded-lg py-3 px-5 ml-2 bg-gray-100 inline font-medium" %>
        <%= button_to 'Delete', [@task.category, @task], method: :delete, data: { confirm: "Are you sure?"}, class: "rounded-lg py-3 px-5 ml-2 bg-gray-100 font-medium inline" %>
    </div>
</div>
</div>
<div class="w-11/12 m-auto mt-3 flex items-baseline">
    <h3 class="text-xl mb-3">Details: </h3>
    <p class="ml-5"><%= @task.details %></p>
