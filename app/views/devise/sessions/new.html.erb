<div class="w-4/12 m-auto mt-20 text-center">
  <h2 class="text-5xl font-bold mb-5">Log In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"text-left" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'text-left' %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field flex items-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "ml-3" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: 'bg-black text-white w-full py-3' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
