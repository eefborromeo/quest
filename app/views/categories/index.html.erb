<p id="notice"><%= notice %></p>

<div class="border-b flex items-center justify-between pb-2.5 mb-2.5">
  <h1 class="text-3xl font-bold">Categories</h1>
  <%= link_to 'New Category +', new_category_path, class: "border p-2.5" %>
</div>

<ul class="w-11/12 m-auto">
  <% @categories.each do |category| %>
    <li class="flex justify-between items-center border-b py-3">
      <a href="/categories/<%= category.id %>" class="w-10/12">
        <%= category.category %>
      </a>
        <div>
          <%= link_to 'Edit', edit_category_path(category), class: "border px-2.5 py-2" %>
          <%= button_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "inline-block border px-2.5 py-2" %>
        <div>
      </li>
  <% end %>
</ul>