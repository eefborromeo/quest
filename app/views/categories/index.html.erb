<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex items-center border-b pb-3">
    <h1 class="font-bold text-3xl">Categories</h1>
    <%= link_to 'New category', new_category_path, class: "rounded-lg py-3 px-5 ml-2 bg-gray-100 font-medium inline" %>
  </div>

  <div id="categories" class="w-11/12 m-auto">
    <% @categories.each do |category| %>
      <div id="<%= dom_id category %>" class="flex justify-between items-center border-b py-2.5">
      <%= link_to category.category, category, class: "w-8/12 text-xl" %>
      <div>
        <%= link_to 'Edit', edit_category_path(category), class: "rounded-lg py-3 px-5 bg-gray-100 inline font-medium" %>
        <%= button_to 'Delete', category_path(category), method: :delete, class: "rounded-lg py-3 px-5 ml-2 bg-gray-100 font-medium inline" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
